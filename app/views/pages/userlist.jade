extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered.table-responsive.table-striped
                thead
                    tr
                        th 用户名
                        th 时间
                        th 查看
                        th 更新
                        th 删除
                    tbody
                        each item in users
                            tr(class='item-id-#{item._id}')
                                td #{item.name}
                                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                                td: a(target='_blank',href='..admin/user/detail/#{item._id}') 查看
                                td: a(target='_blank',href='..admin/user/update/#{item._id}') 更新
                                td: button.del.btn.btn-danger.btn-sm(type='button',data-id='#{item._id}') 删除