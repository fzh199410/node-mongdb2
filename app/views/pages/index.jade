extends ../layout

block content
    .container
        .row
            each cate in catetories
                .panel.panel-default
                    .panel-heading
                        h3
                            a(href='/results?cate=#{cate._id}&page=1') #{cate.name} >.< 更多
                    .panel-body
                        if cate.movies && cate.movies.length>0
                            each item in cate.movies
                                .col-md-2
                                    .thumbnail
                                        a(href='/movie/#{item._id}')
                                        if item.poster.indexOf('http')>-1
                                            img(src='#{item.poster}',alt='#{item.title}',style='height:220px')
                                        else
                                            img(src='/upload/#{item.poster}',alt='#{item.title}',style='height:220px')
                                        .caption.text-center
                                            h4.wordsInaline #{item.title}
                                            p: a.btn.btn-primary(href='/detail/#{item._id}',role='button') 观看正片
