extends ../layout
block content
    .container
        .row
            form.form-horizontal(method='post',action='/admin/catetory/save')
                .form-group
                    label.col-md-2.control-label(for='inputCatetory') 电影分类
                    .col-md-10
                        input#inputCatetory.form-control(type='text',name='catetory[name]',value='#{catetory.name}')
                .form-group
                    .col-md-offset-5.col-sm-1
                    button.btn.btn-primary(type="submit") 录入
